<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">
    <TextView
        android:text="Chendur Fincorp"
        android:fontFamily="@font/lato_bold"
        android:textSize="20sp"
        android:padding="@dimen/_10sdp"
        android:textColor="#FFFFFF"
        android:paddingLeft="@dimen/_10sdp"
        android:id="@+id/logout_layout"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp" />
    <TextView
        android:layout_below="@+id/logout_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure that you need to logout?"
        android:id="@+id/tv_logout"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_below="@+id/tv_logout"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="YES"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="#50000000"
            android:id="@+id/btn_yes_logout"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/text_dialog"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/lato_bold"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />
        <Button
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="NO"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold"
            android:id="@+id/btn_no_logout"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/text_dialog"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="#50000000"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>