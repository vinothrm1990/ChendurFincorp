<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/leave_layout"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".activity.LeaveActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/home_layout"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">
                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_leave_menu"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_100sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/home_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="18sp"
                        android:text="@string/empid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/leave_tv_empid"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="18sp"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:background="#30000000"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leave_tv_sdate"
                        android:gravity="center"
                        android:text="@string/sdate"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp" />
                </LinearLayout>
                <LinearLayout
                    android:background="#30000000"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leave_tv_edate"
                        android:gravity="center"
                        android:text="@string/edate"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp" />
                </LinearLayout>
                <LinearLayout
                    android:background="#30000000"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        app:hasFocus="false"
                        app:alwaysShowHint="true"
                        app:isResponsiveIconColor="true"
                        app:hasClearButton="false">
                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:textColor="#FFF"
                            android:id="@+id/leave_et_reason"
                            android:textColorHint="#FFF"
                            android:hint="@string/lhint"
                            android:fontFamily="@font/lato_regular"
                            android:imeOptions="actionNext"
                            android:inputType="textMultiLine"
                            android:popupElevation="@dimen/_5sdp"
                            android:background="@null"
                            android:textSize="16sp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:gravity="top|left"
                            android:lines="7"
                            android:maxLines="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="1"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/leave_btn_submit"
                        android:textColor="#FFF"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="SUBMIT"
                        android:clickable="true"
                        android:background="#50000000"
                        android:textSize="20sp"
                        app:spinning_bar_width="@dimen/_2sdp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
